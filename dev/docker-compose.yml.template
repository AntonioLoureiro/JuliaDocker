version: '3'

services:
  julia:
    image: antonioloureiro/julia_dev
    container_name: [NAME]_dev
    volumes:
      - /docker_machines_data/[NAME]/workspace:/workspace
      - /etc/ssl/certs:/etc/ssl/certs
    ports:
    - "[PORT]88:8888"  # jupyter
    - "[PORT]89:8889"  # interface web
    links:
      - mongo
  mongo:
    image: mongo
    container_name: [NAME]_db
    volumes:
      - /docker_machines_data/[NAME]/db:/data/db
